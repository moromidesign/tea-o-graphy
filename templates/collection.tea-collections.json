{
  "sections": {
    "collection-banner": {
      "type": "collection-banner",
      "settings": {
        "show_collection_image": true,
        "show_collection_title": true,
        "show_collection_description": true,
        "section_height": "small",
        "text_width": "medium",
        "image_text_color": "{{ shop.brand.colors.primary[0].background }}",
        "image_overlay_color": "{{ shop.brand.colors.primary[0].foreground }}",
        "image_overlay_opacity": 0,
        "quick_links": "our-shop"
      }
    },
    "main": {
      "type": "main-collection",
      "settings": {
        "show_sort_by": true,
        "products_per_page": 24,
        "mobile_products_per_row": "2",
        "desktop_products_per_row": 4,
        "show_filters": true,
        "show_filter_group_name": true,
        "show_color_swatch": true,
        "open_first_filter_group": false,
        "filter_position": "drawer",
        "promotion_position": "top",
        "promotion_height": "small"
      }
    }
  },
  "order": [
    "collection-banner",
    "main"
  ]
}