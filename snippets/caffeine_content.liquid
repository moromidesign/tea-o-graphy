{% assign caffeine_content = product.metafields.custom.caffeine_content
  | metafield_text
  | downcase
  | replace: ' ', '-'
-%}

{% case caffeine_content -%}
  {%- when 'high-caffeine' -%}
    A text for high caffeine...
  {%- when 'moderate-caffeine' -%}
    moderate caffeine...
  {%- when 'low-caffeine' -%}
    low caffeine...
  {%- when 'no-caffeine' -%}
    no caffeine...
{%- endcase %}
